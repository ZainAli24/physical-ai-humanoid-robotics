# RAG Chatbot Backend - Environment Variables
# Feature: 004-rag-chat

# Gemini API Configuration (for OpenAI Agents SDK)
GEMINI_API_KEY=your_gemini_api_key_here
CHATCOMPLETION_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/
CHAT_MODEL=gemini-2.5-flash

# OpenAI API Configuration (for embeddings only)
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant Configuration
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=robotics_textbook

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
CHUNK_SIZE=512
CHUNK_OVERLAP=128

# RAG Configuration
RETRIEVAL_LIMIT=5
SIMILARITY_THRESHOLD=0.7

# Server Configuration
PORT=8000
HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000,https://yourusername.github.io

# Optional: Admin API Key (for /api/embed endpoint)
ADMIN_API_KEY=your_admin_secret_key_here
